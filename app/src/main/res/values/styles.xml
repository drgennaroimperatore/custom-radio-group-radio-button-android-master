<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:dropDownListViewStyle">@style/chosenDiagnosisSpinnerStyle</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="PresetLayoutButton">

        <item name="android:background">@drawable/background_selector_preset_button</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PresetLayoutButton_ValueText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/padding_side_title_text
        </item>
        <item name="android:paddingLeft">@dimen/padding_side_title_text</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/padding_side_title_text
        </item>
        <item name="android:paddingRight">@dimen/padding_side_title_text</item>
    </style>

    <style name="PresetLayoutButton_ValueImage">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/padding_side_title_text
        </item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/padding_side_title_text</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">
            @dimen/padding_side_title_text
        </item>
        <item name="android:paddingRight">@dimen/padding_side_title_text</item>
    </style>

    <style name="PresetLayoutButton_UnitText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>

    </style>

    <style name="PresetLayoutButton_AnimalText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">0dp</item>

    </style>

    <style name="NameOfChoice">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_time_preset_unit</item>
        <item name="android:paddingTop">2dp</item>
        <item name ="android:paddingLeft">1dp</item>
        <item name ="android:paddingBottom">1dp</item>
        <item name ="android:layout_margin">3dp </item>
        <item name ="android:layout_marginTop">3dp </item>
        <item name ="android:layout_alignParentLeft">true</item>
    </style>

    <style name="chosenDiagnosisSpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="HeaderStyle" parent= "android:Widget.TextView">
        <item name="android:textSize">30dp </item>
        <item name="android:textStyle">bold </item>
        <item name="android:textColor">@color/white </item>
    </style>

    <style name="SubHeaderStyle" parent= "android:Widget.TextView">
        <item name="android:textSize">20dp </item>
        <item name="android:textStyle">bold </item>
        <item name="android:textColor">@color/white </item>
    </style>
    <style name="SmallHeaderStyle" parent= "android:Widget.TextView">
        <item name="android:textSize">15dp </item>
        <item name="android:textStyle">bold </item>
        <item name="android:textColor">@color/white </item>
    </style>




</resources>
