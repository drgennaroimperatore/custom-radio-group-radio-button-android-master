<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                tools:context="net.crosp.customradiobtton.MainActivity">



    <com.androidplot.pie.PieChart
            android:id="@+id/mySimplePieChart"
            android:layout_width="fill_parent"
            android:layout_height="500px"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            androidPlot.title.text="Most Likely Diseases"
            androidPlot.title.labelPaint.textSize="@dimen/pie_title_font_size"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="left"
            android:orientation="horizontal">



    </LinearLayout>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@id/mySimplePieChart"
            android:layout_gravity="left"
            android:orientation="vertical">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/results_page_heading"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:layout_marginBottom="10dp"
                  android:text="Other Diseases"/>
        <ListView
                android:id="@+id/disease_list_view"


                android:layout_height="wrap_content"
                android:layout_width="fill_parent"/>



    </LinearLayout>




    <Button  android:id="@+id/prev_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:text="&lt; Prev">
    </Button>

</RelativeLayout>